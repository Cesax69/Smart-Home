# Configuración del API Gateway
PORT=3000
NODE_ENV=development

# URLs de los Microservicios
USERS_SERVICE_URL=http://localhost:3001
TASKS_SERVICE_URL=http://localhost:3002
FILES_SERVICE_URL=http://localhost:3003
NOTIFICATIONS_SERVICE_URL=http://localhost:3004

# Configuración de Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Configuración de Proxy
PROXY_TIMEOUT=30000
PROXY_LIMIT=10mb

# Configuración de Seguridad
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100